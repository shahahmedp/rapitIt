## PRODUCTION / DEVELOPMENT TOGGLING
NODE_ENV="development"       # Set the environment mode (development, production, etc.)

## HOST LAYER
MODE="default"               # Application mode (default, custom, etc.)
SERVER_URL="localhost"       # Your server URL
APP_URL="http://localhost"   # Application URL
APP_KEY="your_app_key_here"  # Your application key

## DATABASE CONFIGURATION
PG_DB_USER="your_pg_username"     # Your PostgreSQL username
PG_DB_PASSWORD="your_pg_password" # Your PostgreSQL password
DB_NAME="your_database_name"      # Your database name
MONGO_URI="mongodb://localhost:27017/your_database"  # Your MongoDB URI

## SERVER CONFIGURATION
PORT=3000                    # Port number for the server

## SMTP CONFIGURATION
SMTP_HOST="your_smtp_host"       # Your SMTP host
SMTP_PORT="587"                  # Your SMTP port (e.g., 587 for TLS)
MAILING_USERNAME="your_email_username"  # Your email service username
MAILING_PASSWORD="your_email_password"  # Your email service password
SENDER_INFO="Your Name <your_email@example.com>"  # Sender information for emails

## AWS S3 CONFIGURATION
IMAGEUpload="../productImage/"   # Path for image uploads
INCLUDE_PORT_IN_NODE_DOMAIN='YES'  # Whether to include port in node domain
DEFAULT_NODE_PROTOCOL="http"      # Default protocol (http, https, etc.)
NODE_DOMAIN_NAME="your_domain_name" # Your node domain name

AWS_S3_ACCESS_KEY="your_aws_access_key"       # Your AWS S3 access key
AWS_S3_SECRET="your_aws_secret_key"           # Your AWS S3 secret key
AWS_S3_BUCKET_NAME="your_s3_bucket_name"      # Your AWS S3 bucket name
AWS_S3_TEMPLATE_BUCKET_NAME="your_template_bucket_name"  # Your AWS S3 template bucket name

## SECURITY
APP_SECRET="your_app_secret"      # Your application secret key
expiresIn=86400                   # Token expiration time (in seconds)
